{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Solidity contracts & artifacts",
  "author": "Sounders",
  "homepage": "[https://...]",
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "yarn build:sol --force && yarn build:ts && yarn build:declarations",
    "build:abi": "npx hardhat export-abi",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "hardhat": "npx hardhat",
    "task:accounts": "npx hardhat accounts",
    "task:deploy": "npx hardhat deploy",
    "task:deploy-and-configure": "npx hardhat deploy-and-configure-short-times",
    "task:mint": "npx hardhat mint",
    "task:run-local": "npx hardhat run-local",
    "test": "npx hardhat test tests/*",
    "coverage": "npx hardhat coverage  --testfiles 'tests/**'",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/prompt": "^1.1.5",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.12.7",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier-plugin-solidity": "^1.1.2",
    "prompt": "^1.3.0",
    "shx": "^0.3.4",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1"
  },
  "dependencies": {
    "ethers": ">=5.6.8 <6.0.0"
  }
}
